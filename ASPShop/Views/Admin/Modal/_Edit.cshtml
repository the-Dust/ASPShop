@model int


<!-- Modal -->
@using (Ajax.BeginForm((Model != 0 ? "UpdateProduct" : "AddProduct"), "Admin", new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "refresh" }))
{
    <div>
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">@(Model!=0? $"Редактирование товара с Id ={Model}":"Добавление нового товара")</h4>
                    </div>
                    <div class="modal-body" id="refresh">
                        @Html.Action("GetProduct", "Admin", new { productId = Model })
                    </div>
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-primary" value="Сохранить" />
                        <button type="button" class="btn btn-danger" data-dismiss="modal" id="closeBtn">Закрыть</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(function () {
        $('#closeBtn').click(function () {
            window.location.href = window.location.href;
        });

    })
</script>

