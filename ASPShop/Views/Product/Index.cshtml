@model IEnumerable<DataAccess.Entities.Product>
@using DataAccess.Entities;

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <tr>
                        <th>Наименование</th>
                        <th>Описание</th>
                        <th>Стоимость</th>
                        <th>Тип</th>
                        <th>Действие</th>
                    </tr>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td>@product.Description</td>
                            <td>@product.Cost</td>
                            <td>@(product.ProductType.Name + " (" + product.ProductType.Description + ")")</td>
                            <td>
                                <button class="btn btn-xs btn-warning" onclick="showProductModal(this, @product.Id)">
                                    <i class="glyphicon glyphicon-pencil"></i>
                                </button> 
                                <button class="btn btn-xs btn-danger" onclick="removeProduct(this, @product.Id)">
                                    <i class="glyphicon glyphicon-remove"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div> 
    </div>
</div>
<div id="modal-content">
    
</div>

@section Scripts{
    <script type="text/javascript">
        function showProductModal(btn, prodId) {
            $.ajax({
                method: 'GET',
                data: null,
                url: '@Url.Action("GetProductPartial")' + '?productId=' + prodId,
                success: function (partialView) {
                    $('#modal-content').empty().html(partialView);
                    $('#productModal').modal('show');
            },
            error: function(){
                console.log(err);
            },
            beforeSend: function(){
                var i = $(btn).find('i');
                i.addClass('hidden');
                $('<div class="ajax-loader">').insertAfter(i);
            },
            complete: function () {
                var i = $(btn).find('i');
                i.removeClass('hidden');
                $(btn).find('.ajax-loader').remove();
            }
            });
        }

        function removeProduct(btn, prodId) {
            $.ajax({
                method: 'GET',
                data: null,
                url: '@Url.Action("RemoveProduct")' + '?productId=' + prodId,
                success: function (response) {
                    if(response && response.IsRemoved)
                    {
                        window.location.href = window.location.href;
                    }
                },
                error: function(){
                    console.log(err);
                },
            });
        }
    </script>
    }

